{% extends './base.njk' %}

    {% block main %}
      <main class="m0 p0 flex-1 bg-no-repeat bg-cover bg-center
        bg-[url(/examples/pages/vera-davidova-852w.webp)] 
        md:bg-[url(/examples/pages/vera-davidova-1160w.webp)] 
        lg:bg-[url(/examples/pages/vera-davidova-1536w.webp)] 
      {% if ismarkdown %}mkdn{% endif %}" id="maincontent">
        {% block header %}
  <header class="p-16
  flex w-full flex-col justify-center overflow-y-hidden 
  
  ">
